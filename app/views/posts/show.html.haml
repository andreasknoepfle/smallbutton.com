- meta title: @post.title, description: @post.description, |
    twitter: {  card: "summary", site: "@andreasknoepfle", title: @post.title, |
    description: @post.description, image: @post.image.present? ? image_post_url(@post, style: :thumb) : "", url: post_url(@post)} |
.container.heading
  .spacer
    %h1= @post.title
    - if user_signed_in?
      .btn-group
        = link_to edit_post_path(@post), class: 'btn btn-primary' do
          %i.fa.fa-pencil>
        - if @post.published
          = link_to post_path(@post, post: {published:false}), method: :put, class: 'btn btn-primary' do
            %i.fa.fa-eye>
        - else
          = link_to post_path(@post, post: {published:true}), method: :put, class: 'btn btn-primary' do
            %i.fa.fa-eye-slash>
        = link_to post_path(@post), method: :delete, class: 'btn btn-danger' do
          %i.fa.fa-times>

.container.white

  .row
    .col-md-9
      .spacer
        .pull-right
          - if @post.image.present?
            = link_to image_post_path(@post), class: "img-spacer" do
              = image_tag(image_post_path(@post, style: :bigger), class: "img-thumbnail")
        by Andreas Kn√∂pfle
        = time_ago_in_words @post.updated_at
        ago
        %hr
        .description

          = @post.description
        .post
          = raw @post.content
          .clearfix
        .comments
          .spacer
          #disqus_thread
