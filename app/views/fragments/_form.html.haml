
= simple_form_for [@post,resource] do |form|
  = form.input :type, as: :hidden
  = form.input :caption, input_html: {size: 50}
  - case resource.type.to_sym
  - when :markdown, :ruby
    = form.input :value,as: :text, input_html: {rows: 10 ,cols: 50}
    = editing_help
    = form.submit class: 'button'