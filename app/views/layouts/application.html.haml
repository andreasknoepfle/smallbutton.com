            %ul
              %li
                %a{:href => "#"}
                  %i.fa.fa-code
                  Code
              %li
                %a{:href => "#"}
                  %i.fa.fa-camera
                  Photos
              %li
                %a{:href => informations_path}
                  %i.fa.fa-user
                  About

      .main
        = yield
